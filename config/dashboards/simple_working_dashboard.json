{
  "dashboard": {
    "id": null,
    "title": "NCS Live Data",
    "tags": [],
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-5m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Control System Stability",
        "type": "timeseries",
        "targets": [
          {
            "datasource": "InfluxDB-NCS",
            "query": "SELECT mean(\"stability_margin\") FROM \"control_kpis\" WHERE $timeFilter GROUP BY time($__interval) fill(null)",
            "refId": "A",
            "resultFormat": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "MTTR (seconds)",
        "type": "stat",
        "targets": [
          {
            "datasource": "InfluxDB-NCS", 
            "query": "SELECT last(\"mttr\") FROM \"agent_kpis\"",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      }
    ]
  }
}
